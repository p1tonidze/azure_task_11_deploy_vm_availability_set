    "virtualMachines_matebox_1_name": {
      "type": "String"
    },
    "virtualMachines_matebox_2_name": {
      "type": "String"
    },
    "networkInterfaces_matebox_1_name": {
      "type": "String"
    },
    "networkInterfaces_matebox_2_name": {
      "type": "String"
    },
